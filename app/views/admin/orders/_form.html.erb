<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $(".pair").focus();
  })
</script>

<%= form_for [:admin, @order], class: "form-group" do |form| %>
  Pair
  <%= form.select :pair_id, @pairs.map { |pair| [pair.pair, pair.id] }, {}, class: "form-control pair" %>
  <p></p>
  Direction
  <%= form.select :direction, ["buy", "sell"], {}, { class: "form-control" }%>
  Size
  <%= form.number_field :size, class: "form-control", value: @order.size || 1 %>
  Entry
  <%= form.number_field :entry, class: "form-control", step: :any %>
  Take Profit
  <%= form.number_field :take_profit, class: "form-control", step: :any %>
  Stop Loss
  <%= form.number_field :stop_loss, class: "form-control", step: :any %>
  Expired at
  <%= form.text_field :expired_at, class: "form-control", value: (@order.expired_at || Time.now + 48.hours).strftime("%Y-%m-%d %H:%M") %>
  <p></p>

  <%= form.submit "Save", class: "btn btn-primary" %>

  <% if params[:action] == "edit" %>
    <%= link_to "Delete", admin_order_path(@order), method: :delete, class: "btn btn-danger", data: { confirm: "Sure?" } %>
  <% end %>

  <%= link_to "Back", admin_orders_path, class: "btn btn-default" %>
<% end %>

