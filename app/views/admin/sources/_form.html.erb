<%= form_for [:admin, @source], class: "form-group" do |form| %>
  Name
  <%= form.text_field :name, class: "form-control" %>
  Username
  <%= form.text_field :username, class: "form-control" %>
  Abbreviation
  <%= form.text_field :abbreviation, class: "form-control" %>
  Active
  <%= form.select :active, [["Yes", true], ["No", false]], {}, class: "form-control" %>

  <p></p>

  <%= form.submit "Save", class: "btn btn-primary btn-wide" %>

  <% if params[:action] == "edit" %>
    <%= link_to "Delete", admin_source_path(@source), method: :delete, class: "btn btn-danger btn-wide", data: { confirm: "Sure?" } %>
  <% end %>

  <%= link_to "Back", admin_sources_path, class: "btn btn-default btn-wide" %>
<% end %>



